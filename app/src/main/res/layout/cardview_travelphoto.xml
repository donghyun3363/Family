<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhGray">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_travel_album"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="2dp"
        card_view:cardElevation="5dp">

        <ImageView
            android:id="@+id/img_travel_album"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:foreground="#88000000"
            android:onClick="albumClick"
            android:scaleType="fitXY"
            android:src="@drawable/img_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date_travel_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0000년 00월"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/small_textsize" />

            <TextView
                android:id="@+id/title_travel_album"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_zero"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="앨범 명"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"

                android:layout_marginBottom="7dp"
                android:background="@drawable/circle_solid_shape">

                <ImageView
                    android:id="@+id/profile_travel_album"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_solid_shape"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_profile" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</FrameLayout>