<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_green"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:layout_collapseMode="parallax"> // pin: 해당 뷰 고정, parallax: 해당 뷰 숨김

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/timeline_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:onClick="backClick"
                    android:src="@drawable/ic_back_white" />

                <TextView
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="타임라인"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/login_done"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:onClick="doneClick"
                    android:textColor="@color/colorWhGray"
                    android:textSize="11sp" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_above="@+id/bottom_navigation"
            android:background="@drawable/bar_shape" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero"
            android:layout_weight="1">


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_above="@+id/bottom_navigation"
            android:background="@drawable/bar_shape" />

        <include
            android:id="@+id/timeline_bar_bottom"
            layout="@layout/bar_bottom" />

    </LinearLayout>
</FrameLayout>