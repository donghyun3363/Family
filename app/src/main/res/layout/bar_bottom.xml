<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bar_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/light_green"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bar_photo"
            android:src="@drawable/ic_bar_photo_white"
            android:layout_width="@dimen/dp_zero"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:onClick="photoClick"
            />

        <ImageButton
            android:id="@+id/bar_calender"
            android:src="@drawable/ic_bar_photo_white"
            android:layout_width="@dimen/dp_zero"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:onClick="calenderClick"
            />

        <ImageButton
            android:id="@+id/bar_push"
            android:src="@drawable/ic_bar_photo_white"
            android:layout_width="@dimen/dp_zero"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:onClick="pushClick"
            />
        <ImageButton
            android:id="@+id/bar_setting"
            android:src="@drawable/ic_bar_photo_white"
            android:layout_width="@dimen/dp_zero"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:onClick="settingClick"
            />

    </LinearLayout>



</LinearLayout>