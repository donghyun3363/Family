<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color_light_a">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_shareprogress"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="8dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <RelativeLayout android:id="@+id/entire_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/main_color_ivory">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/share_profile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/circle_solid_shape"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_user" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_zero"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/share_nickname"
                                android:layout_width="@dimen/dp_zero"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="10dp"
                                android:paddingTop="19dp"
                                android:textColor="@color/main_color_font" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/share_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/main_color_font"
                            android:textSize="@dimen/small_textsize" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/complete_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/main_color_font"
                            android:text="수행 완료" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorWhGray" />

                <LinearLayout
                    android:id="@+id/share_hidecontainer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_zero"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/share_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/main_color_font"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorWhGray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_time" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity=""
                                    android:text="일정 :"
                                    android:textColor="@color/main_color_font" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/share_startdate"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"

                                        android:textSize="@dimen/small_textsize"
                                        android:textColor="@color/main_color_font" />

                                    <TextView
                                        android:id="@+id/share_starttime"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"

                                        android:textSize="@dimen/small_textsize"
                                        android:textColor="@color/main_color_font" />
                                </LinearLayout>


                                <TextView
                                    android:id="@+id/share_dump"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="center_vertical"

                                    android:textColor="@color/main_color_font" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/share_enddate"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:textSize="@dimen/small_textsize"
                                        android:gravity="center_vertical"

                                        android:textColor="@color/main_color_font" />

                                    <TextView
                                        android:id="@+id/share_endtime"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:textSize="@dimen/small_textsize"

                                        android:textColor="@color/main_color_font" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorWhGray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_location" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="위치 :"
                                android:textColor="@color/main_color_font" />

                            <ScrollView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/share_location"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/main_color_font" />
                            </ScrollView>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorWhGray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_zero"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_memo" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="메모 :"
                                    android:textColor="@color/main_color_font" />
                            </LinearLayout>

                            <ScrollView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/share_memo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/main_color_font" />
                            </ScrollView>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="@color/colorWhGray" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <LinearLayout android:id="@+id/share_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="?attr/selectableItemBackground"
                        android:onClick="onBackClick"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="돌아가기"
                            android:textColor="@color/main_color_font" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_zero"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:id="@+id/share_particishow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="?attr/selectableItemBackground"
                        android:onClick="onParticiShowClick"
                        android:orientation="horizontal">

                        <TextView android:id="@+id/shar_particishow_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="현재 참여자"
                            android:textColor="@color/main_color_font"
                            android:textSize="@dimen/small_textsize" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_click" />
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/share_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/main_color_font"
                        android:text="참석" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/in_container"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:background="@color/main_color_light_a"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_centerInParent="true">
                <TextView android:id="@+id/complete_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="이미 완료된 버킷입니다!  "
                    android:gravity="center"
                    android:textSize="28sp"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite"
                    android:ellipsize="marquee"
                    />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>