<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhGray">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        android:id="@+id/cv_memory_album"
        card_view:cardCornerRadius="13dp"
        card_view:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_memory_album"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:foreground="#88000000"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_default"
                        />

                    <TextView
                        android:id="@+id/title_memory_album"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="앨범 명"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_alignParentEnd="true"
                        android:id="@+id/num_memory_album"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="0000년 00월"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"/>
                </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>